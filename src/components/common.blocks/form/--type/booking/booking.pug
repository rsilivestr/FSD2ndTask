include ~CommonBlocks/button/button
include ~CommonBlocks/dropdown/dropdown
include ~CommonBlocks/date-dropdown/date-dropdown
include ~CommonBlocks/input-box/input-box

mixin formBooking
  form.form.form--type_booking&attributes(attributes)
    h1.form__title
      span.form__title-room.form__title-room--lux 888
      span.form__title-price 9 900₽
    
    //- .form__row.mb20
      +inputBox('прибытие', 'xs')
        +dateDrop
      +inputBox('выезд', 'xs')
        +dateDrop

    +datepickerDouble.form__datepicker-double


    +inputBox('гости', 'l')
      +inputDrop('single', 'Сколько гостей').mb20
        +dropOption('взрослые', '', '', '', 0, 10)
        +dropOption('дети', '', '', '', 0, 10)
        +dropOption('младенцы', '', '', '', 0, 10)

    //- Bill info here ------------------------
    //- Table
    table.form__bill.bill-info
      tbody
        tr.bill-info__row.bill-info__initial
          td.bill-info__title 9&nbsp;990₽ x 4 суток
          td.bill-info__sum 39&nbsp;960₽
        tr.bill-info__row.bill-info__discount
          td.bill-info__title.bill-info__title--has-hint Сбор за услуги: скидка 2&nbsp;179₽
          td.bill-info__sum 0₽
        tr.bill-info__row.bill-info__extra
          td.bill-info__title.bill-info__title--has-hint Сбор за дополнительные услуги
          td.bill-info__sum 300₽
        //- tr.bill-info__row.bill-info__total
        //-   td(colspan='2')
        //-     span Итого
        //-     span 38&nbsp;081₽
    .bill-info__row.bill-info__total
      span.bill-info__total-title Итого
      span.bill-info__total-sum 38&nbsp;081₽
    
    +button('забронировать','arrowed','l',false).form__btn--main