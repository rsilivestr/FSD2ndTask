include ~CommonBlocks/button/button
include ~CommonBlocks/dropdown/dropdown
include ~CommonBlocks/input/input
include ~CommonBlocks/input-box/input-box
include ~CommonBlocks/form/__prompt/prompt
include ~CommonBlocks/radio/radio
include ~CommonBlocks/toggle/toggle

mixin formRegistration
  form.form.form--type_registration&attributes(attributes)

    h1.form__title.mb21 Регистрация аккаунта

    +input({ placeholder: 'Имя'}).mb10
    +input({ placeholder: 'Фамилия'}).mb10

    +inputBox.radio-group.mb24
      +radio({
        name: 'gender',
        value: 'man',
        label: 'Мужчина',
        checked: true,
      })
      +radio({
        name: 'gender',
        value: 'woman',
        label: 'Женщина',
      })
      +radio({
        name: 'gender',
        value: 'other',
        label: 'Иное',
      })

    +inputBox('дата рождения').mb20
      +input({ placeholder: 'ММ.ДД.ГГГГ'}).js-dob-masked

    +inputBox('данные для входа в сервис').mb24
      +input({ placeholder: 'Email', type: 'email' }).mb10
      +input({ placeholder: 'Пароль', type: 'password' }).mb10
      +toggle({ label: 'Получать спецпредложения' })

    +button({
      title: 'перейти к оплате',
      style: 'arrowed',
      size: 'l'
    }).form__btn--main

    +formPrompt('Уже есть аккаунт на Toxin?')
      +aButton({
        title: 'войти',
        style: 'bordered',
        size: 's',
        url: './login.html'
      }).form__btn.form__btn--prompt
