include ../logo/logo
include ../button/button

mixin headerUIKit
  header.uikit-header.container.container--width_l
    +logoUIKit

mixin header(username)
  header.main-header.full-width-container&attributes(attributes)

    +logoToxin.main-header__logo

    button.button.button--style_text.button--size_auto.main-header__menu-btn
      i.material-icons menu

    nav.main-header__nav
      a(href="#some-url").main-header__navlink.main-header__navlink--current home
      a(href="#some-url").main-header__navlink about us
      a(href="#some-url").main-header__navlink.main-header__navlink--has-subnav services
      a(href="#some-url").main-header__navlink careers
      a(href="#some-url").main-header__navlink news
      a(href="#some-url").main-header__navlink documentation

    if (!username)
      .main-header__user-buttons
        +button('login', 'bordered').main-header__btn
        +button('register').main-header__btn
    else
      .main-header__user-panel
        a(href="#some-url-or-menu").main-header__user-menu= username

//- submixins - for customization
mixin mainHeader
  header.main-header.full-width-container&attributes(attributes)
    block

mixin headerNav
  nav.main-header__nav
    block

mixin navlink(name, current)
  a(href="some-url", class = current ? 'main-header__navlink--current' : '').main-header__navlink= name

mixin headerButtons(login='login', register='register')
  .main-header__user-buttons
    +button(login, 'bordered').main-header__btn
    +button(register).main-header__btn

mixin headerUser()
  .main-header__user-panel
    a(href="#some-url-or-menu").main-header__user-menu= username