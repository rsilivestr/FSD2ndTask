mixin dateDrop
  .date-dropdown.date-dropdown--single&attributes(attributes)
    input(type='text' readonly placeholder='ДД.ММ.ГГГГ').date-dropdown__display.input-box__input.datepicker--single

mixin filterDateDrop
  .date-dropdown.date-dropdown--range&attributes(attributes)
    input(type='text' readonly).date-dropdown__display.input-box__input.datepicker-range

mixin datepickerDouble
  .datepicker-double&attributes(attributes)
    +inputBox('прибытие', 'xs').mr5
      .date-dropdown
        input(type='text' readonly placeholder='ДД.ММ.ГГГГ').date-dropdown__display.input-box__input.date-dropdown__start
    +inputBox('выезд', 'xs')
      .date-dropdown
        input(type='text' readonly placeholder='ДД.ММ.ГГГГ').date-dropdown__display.input-box__input.date-dropdown__end
