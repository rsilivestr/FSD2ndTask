include ../input-box/input-box

mixin dot(is = {current: false})
  button.room-card__dot(class = (is.current === true) ? 'room-card__dot--current' : '')
    i.icon-circle

mixin roomCard(roomPhoto='room1.png', roomRating=5, roomNumber, dailyCost, reviewCount=0, lux=false)
  .room-card&attributes(attributes)
    .room-card__photos
      img(src='../assets/images/' + roomPhoto, alt='Фото комнаты').room-card__photo
      .room-card__dots
        +dot({current: true})
        +dot()
        +dot()
        +dot()
    .room-card__info
      h2.room-card__title.form__title
        span.form__title-room(class = lux ? 'form__title-room--lux' : '')= roomNumber
        span.form__title-price= dailyCost
      .room-card__rating
        +starRating(roomRating)
        span.room-card__review-counter= reviewCount
