include ~Components/bill-info/bill-info
include ~Components/box/box
include ~Components/button/button
include ~Components/date-dropdown/date-dropdown
include ~Components/dropdown/dropdown
include ~Components/room-title/room-title

mixin formBooking({ number = '999', lux = false })
  form.form.form--type_booking&attributes(attributes)
    .form__title
      +roomTitle({ number: '888', lux: true, price: '9 990' })

    +box({ mb: 20 })
      +dateDropdown({ type: 'double', placeholder: 'ДД.ММ.ГГГГ' }).js-booking-datepicker

    +box({ mb: 10, label: 'гости' })
      +dropdown.js-booking-form-dropdown

    +box({ mb: 25 })
      +billInfo

    +button({ title: 'забронировать', style: 'arrowed', size: 'l' })
