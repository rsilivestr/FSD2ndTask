include ~UtilBlocks/head
include ~CommonBlocks/button/button
include ~CommonBlocks/checkbox/checkbox
include ~CommonBlocks/dropdown/dropdown
include ~CommonBlocks/date-dropdown/date-dropdown
include ~CommonBlocks/header/header
include ~CommonBlocks/image-title/image-title
include ~CommonBlocks/input-box/input-box
include ~CommonBlocks/pagination/pagination
include ~CommonBlocks/range/range
include ~CommonBlocks/spoiler/spoiler
include ~CommonBlocks/subscribe-form/subscribe-form
include ~CommonBlocks/user-comment/user-comment

+head('Form Elements')
  body.page.page--layout_form-elements
    header.header--uikit
      +logoUIKit
    main.main-content.fe-grid

        //- a 1 --------------------------------------//

        .fe-grid__item
          +inputBox('text field').mb20
            +textField('Email')

          +inputBox('text field').mb19
            +textField('This is pretty awesome', 'text', 'uikit_always-focused')

          +inputBox('dropdown').mb23
            +dropdown.js-dropdown-1
 
          +inputBox('masked text field').mb41
            +textField('ДД.ММ.ГГГГ').js-masked-date

          //- double date dropdown
          +dateDropdown({ type: 'double', placeholder: 'ДД.ММ.ГГГГ' }).js-datepicker-double.mb40

          //- filter date dropdown
          +inputBox('filter date dropdown', 'm').js-datepicker-range.mb41
            +dateDropdown

          //- subscribtion text field
          +inputBox('subscribtion text field', 'm')
            +subscribeForm


        //- a 2 --------------------------------------//

        .fe-grid__item
          //- checkbox buttons
          +inputBox('checkbox buttons', 's').mb40
            .mb16
            +checkbox({ label: 'Можно курить' }).mb10
            +checkbox({ label: 'Можно с питомцами', checked: true }).mb10
            +checkbox({ label: 'Можно пригласить гостей (до\n 10 человек)', checked: true })

          //- radio buttons
          +inputBox('radio buttons').mb41
            .mb16
            +radioGroup('gender')
              +radioItem('man', 'Мужчина', true)
              +radioItem('woman', 'Женщина')

          //- toggle
          +inputBox('toggle').mb44
            .mb16
            +inputToggle('Получать спецпредложения', true)
            .mb14
            +inputToggle('Получать спецпредложения')

          //- like button
          +inputBox('like button', 'm').mb38
            .mb16
            +likeBtn(2)
            +likeBtn(12, true)

          //- rate button
          +inputBox('rate button')
            .mb14
            +starRating(4)
            +starRating(5, true)


        //- a 3 --------------------------------------//

        .fe-grid__item
          //- range slider
          +inputBox('range slider', 'm').mb32
            +rangeSlider.js-rangepicker

          //- buttons
          +inputBox('buttons').mb40
            .mb15
            +button()
            +button({
              title: 'click me',
              style: 'gradient',
              size: 's',
              disabled: true
            }).ml20
            
            .mb30
            +button({
              title: 'click me',
              style: 'bordered',
              size: 's'
            })
            +button({
              title: 'click me',
              style: 'bordered',
              size: 's',
              disabled: true
            }).ml20
            
            .mb31
            +button({
              title: 'click me',
              style: 'text',
              size: 'auto',
            })
            +button({
              title: 'click me',
              style: 'text',
              size: 'auto',
              disabled: true,
            }).ml20

            .mb30
            +button({
              title: 'перейти к оплате',
              style: 'arrowed',
              size: 'l',
            })

          //- pagination
          +inputBox('pagination', 's')
            .mb17
            +pagination


        //- b 1 --------------------------------------//

        .fe-grid__item
          //- dropdown
          +inputBox('dropdown', 'm').mb20
            +dropdown(dropdownMultiDefaults).js-dropdown-2

          //- dropdown expanded
          +inputBox('dropdown', 'm')
            +dropdown(dropdownMultiDefaults, true)

        //- b 2 --------------------------------------//

        .fe-grid__item
          //- wide dropdown with buttons ПРИМЕНИТЬ & ОЧИСТИТЬ
          +inputBox('dropdown')
            +dropdown({}, true)

        //- b 3 --------------------------------------//
        
        .fe-grid__item
          //- wide dropdown with button ПРИМЕНИТЬ
          +inputBox('dropdown')
            +dropdown({}, true)

        //- c 1 --------------------------------------//

        .fe-grid__item
          //- expandable checkbox list
          +inputBox('', 'm').mb40
            +spoiler({ title: 'Expandable checkbox list' }).js-spoiler
              each label in ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь']
                +checkbox({ label })

          //- expanded expandable checkbox list
          +inputBox('', 'm')
            +spoiler({ title: 'Expandable checkbox list', isOpen: true }).js-spoiler
              each label in ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь']
                +checkbox({ label })

        //- c 2 --------------------------------------//

        .fe-grid__item

          .mb5

          //- rich checkbox buttons
          +inputBox('rich checkbox buttons', 'm')
            .mb16
            +checkbox({
              label: 'Широкий коридор',
              text: 'Ширина коридоров в номере\nне менее 91 см.',
            }).mb10
            +checkbox({
              label: 'Помощник для инвалидов',
              text: 'На 1 этаже вас встретит специалист\nи проводит до номера.',
            })

        //- c 3 --------------------------------------//

        .fe-grid__item

          .mb5

          //- bullet list
          h3 bullet list
          .mb13
          ul.bullet-list
            each li in ['нельзя с питомцами', 'без вечеринок и мероприятий', "Время прибытия — после 13:00,\n а выезд до 12:00"]
              li.bullet-list__item= li

        //- d 1 --------------------------------------//

        .fe-grid__item
          //- комфорт
          +imageTitle({
            type: 'emoji',
            src: 'insert_emoticon',
            heading: 'комфорт',
            text: 'шумопоглощающие стены',
          }).bb-10
          //- удобство
          +imageTitle({
            type: 'emoji',
            src: 'location_city',
            heading: 'удобство',
            text: 'окно в каждой из спален',
          }).bb-10

          .mb50

        //- e 1 --------------------------------------//

        .fe-grid__item.area-e

          .mb20

          //- comment (wide)
          +userComment({
            age: '5 дней назад',
            avatar: '../assets/images/uid1111.jpg',
            isLiked: true,
            likes: 12,
            text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий.\nИ стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто\nне жаловался из соседей.',
            username: 'Мурад Сарафанов',
          })

    script(type="text/javascript" src="../scripts/form_elements.js")
