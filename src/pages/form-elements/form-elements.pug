include ~UtilBlocks/head
include ~CommonBlocks/bullet-list/bullet-list
include ~CommonBlocks/button/button
include ~CommonBlocks/checkbox/checkbox
include ~CommonBlocks/dropdown/dropdown
include ~CommonBlocks/date-dropdown/date-dropdown
include ~CommonBlocks/header/header
include ~CommonBlocks/image-title/image-title
include ~CommonBlocks/input/input
include ~CommonBlocks/like-counter/like-counter
include ~CommonBlocks/pagination/pagination
include ~CommonBlocks/radio/radio
include ~CommonBlocks/range/range
include ~CommonBlocks/star-rating/star-rating
include ~CommonBlocks/spoiler/spoiler
include ~CommonBlocks/subscribe-form/subscribe-form
include ~CommonBlocks/toggle/toggle
include ~CommonBlocks/user-comment/user-comment

+head('Form Elements')
  body.page.page--layout_form-elements
    header.header--uikit
      +logoUIKit
    main.main-content.fe-grid

        //- a 1 --------------------------------------//

        .fe-grid__item
          .box.box--width_l.box--mb_2
            h3.box__label text field
            +input({ placeholder: 'Email' })

          .box.box--width_l.box--mb_2
            h3.box__label text field
            +input({ placeholder: 'This is pretty awesome', value: 'This is pretty awesome' })

          .box.box--width_l.box--mb_2
            h3.box__label dropdown
            +dropdown.js-dropdown-1
 
          .box.box--width_l.box--mb_4
            h3.box__label masked text field
            +input({ placeholder: 'ДД.ММ.ГГГГ' }).js-masked-date

          //- double date dropdown
          .box.box--width_l.box--mb_4
            +dateDropdown({ type: 'double', placeholder: 'ДД.ММ.ГГГГ' }).js-datepicker-double

          //- filter date dropdown
          .box.box--mb_4.box--width_m
            .js-datepicker-range
              .box.box--width_m
                h3.box__label filter date dropdown
                +dateDropdown

          //- subscribtion text field
          .box.box--width_m
            h3.box__label subscribtion text field
            +subscribeForm


        //- a 2 --------------------------------------//

        .fe-grid__item
          //- checkbox buttons
          .box.box--mb_4
            .box.box--mb_1-5
              h3 checkbox buttons
            .box.box--mb_0-8
              +checkbox({ label: 'Можно курить' })
            .box.box--mb_0-8
              +checkbox({ label: 'Можно с питомцами', checked: true })
            .box
              +checkbox({ label: 'Можно пригласить гостей\n(до 10 человек)', checked: true })

          //- radio buttons
          .box.box--mb_4
            .box.box--mb_1-5
              h3 radio buttons
            .box
              .radio-group
                +radio({
                  name: 'gender',
                  value: 'man',
                  label: 'Мужчина',
                  checked: true,
                })
                +radio({
                  name: 'gender',
                  value: 'woman',
                  label: 'Женщина',
                })

          //- toggle
          .box.box--mb_4-5
            .box.box--mb_1-5
              h3 toggle
            .box.box--mb_1-5
              +toggle({ label: 'Получать спецпредложения', checked: true })
            .box
              +toggle({ label: 'Получать спецпредложения' })

          //- like button
          .box.box--mb_4
            .box.box--mb_1-5
              h3 like button
            .box
              .box.box--inline.box--mr_1.box--width_auto
                +likeCounter({ value: 2 }).js-like
              .box.box--inline.box--width_auto
                +likeCounter({ value: 12, checked: true }).js-like

          //- rate button
          .box
            .box.box--mb_1-5
              h3 rate button
            .box.box--inline.box--mr_2
              +starRating({ value: 4 })
            .box.box--inline
              +starRating({ value: 5, rateable: true }).js-rating


        //- a 3 --------------------------------------//

        .fe-grid__item
          //- range slider
          .box.box--mb_3.box--width_m
            h3 range slider
            +rangeSlider.js-rangepicker

          //- buttons
          .box.box--width_l.box--mb_4
            .box.box--mb_1-5
              h3 buttons
            .box.box--mb_3
              .box.box--inline.box--mr_2.box--width_xs
                +button() 
              .box.box--inline.box--width_xs
                +button({
                  title: 'click me',
                  style: 'gradient',
                  size: 's',
                  disabled: true
                })
            .box.box--mb_3
              .box.box--inline.box--mr_2.box--width_xs
                +button({
                  title: 'click me',
                  style: 'bordered',
                  size: 's'
                })
              .box.box--inline.box--width_xs
                +button({
                  title: 'click me',
                  style: 'bordered',
                  size: 's',
                  disabled: true
                })

            .box.box--mb_3
              .box.box--inline.box--mr_2.box--width_xs
                +button({
                  title: 'click me',
                  style: 'text',
                  size: 'auto',
                })
              .box.box--inline.box--width_xs
                +button({
                  title: 'click me',
                  style: 'text',
                  size: 'auto',
                  disabled: true,
                })

            +button({
              title: 'перейти к оплате',
              style: 'arrowed',
              size: 'l',
            })

          //- pagination
          .box.box--width_m
            .box.box--mb_1-5
              h3 pagination
            .box
              +pagination


        //- b 1 --------------------------------------//

        .fe-grid__item
          //- dropdown
          .box.box--width_m.box--mb_2
            .box.box--mb_0-5
              h3 dropdown
            +dropdown({type: 'multi'}).js-dropdown-2

          //- dropdown expanded
          .box.box--width_m.box--mb_2
            .box.box--mb_0-5
              h3 dropdown
            +dropdown({type: 'multi'}, true)

        //- b 2 --------------------------------------//

        .fe-grid__item
          //- wide dropdown with buttons ПРИМЕНИТЬ & ОЧИСТИТЬ
          .box.box--width_l
            h3.box__label dropdown
            +dropdown({type: 'single'}, true)

        //- b 3 --------------------------------------//
        
        .fe-grid__item
          //- wide dropdown with button ПРИМЕНИТЬ
          .box.box--width_l
            h3.box__label dropdown
            +dropdown({type: 'single'}, true)

        //- c 1 --------------------------------------//

        .fe-grid__item
          //- expandable checkbox list
          .box.box--mb_4.box--width_m
            +spoiler({ title: 'Expandable checkbox list' }).js-spoiler
              each label in ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь']
                +checkbox({ label })

          //- expanded expandable checkbox list
          .box.box--mb_4.box--width_m
            +spoiler({ title: 'Expandable checkbox list', isOpen: true }).js-spoiler
              each label in ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь']
                +checkbox({ label })

        //- c 2 --------------------------------------//

        .fe-grid__item

          //- rich checkbox buttons
          .box.box--mt_0-5
            .box.box--mb_1-5
              h3 rich checkbox buttons
            .box.box--mb_1
              +checkbox({
                label: 'Широкий коридор',
                text: 'Ширина коридоров в номере\nне менее 91 см.',
              })
            .box
              +checkbox({
                label: 'Помощник для инвалидов',
                text: 'На 1 этаже вас встретит специалист\nи проводит до номера.',
              })

        //- c 3 --------------------------------------//

        .fe-grid__item

          //- bullet list
          .box.box--mt_0-5
            .box.box--mb_1-2
              h3 bullet list
            .box
              +bulletList({ 
                list: [
                  'Нельзя с питомцами',
                  'Без вечеринок и мероприятий',
                  'Время прибытия — после 13:00,\n а выезд до 12:00',
                ] 
              })

        //- d 1 --------------------------------------//

        .fe-grid__item
          .box.box--mb_5
            //- комфорт
            +imageTitle({
              type: 'emoji',
              src: 'insert_emoticon',
              heading: 'комфорт',
              text: 'шумопоглощающие стены',
            }).bb-10
            //- удобство
            +imageTitle({
              type: 'emoji',
              src: 'location_city',
              heading: 'удобство',
              text: 'окно в каждой из спален',
            }).bb-10


        //- e 1 --------------------------------------//

        .fe-grid__item.area-e

          //- comment (wide)
          .box.box--mt_2
            +userComment({
              age: '5 дней назад',
              avatar: '../assets/images/uid1111.jpg',
              isLiked: true,
              likes: 12,
              text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий.\nИ стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто\nне жаловался из соседей.',
              username: 'Мурад Сарафанов',
            })

    script(type="text/javascript" src="../scripts/form_elements.js")
